<h1> All cocktail: </h1>
<% @cocktails.each do |cocktail| %>
<div class="card-category p-5 m-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(cocktail.photo.key) %>')">
  <%= link_to cocktail.name, cocktail_path(cocktail) %>
</div>
<% end %>

<%= link_to "Add a new cocktail here", new_cocktail_path %>
