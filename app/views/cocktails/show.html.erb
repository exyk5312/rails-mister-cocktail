<div class="d-flex justify-content-center">
  <h1><%= @cocktail.name %> </h1>
</div>
<div class="d-flex justify-content-center">
  <%= cl_image_tag(@cocktail.photo.key, width: 300, height: 300) %>
</div>
<div class="d-flex justify-content-center pt-1">
  <ul>
  <% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description%> <%= dose.ingredient.name%> <%= link_to "delete this dose", dose_path(dose), method: :delete %></li>
  <% end %>
  </ul>
</div>
<div class="d-flex justify-content-center">
<%= link_to "Add new doses", new_cocktail_dose_path(@cocktail), :class => "btn btn-primary" %>
</div>